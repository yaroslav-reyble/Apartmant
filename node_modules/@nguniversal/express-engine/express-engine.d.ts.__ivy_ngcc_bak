
import { NgModuleFactory } from '@angular/core';
import { Request } from 'express';
import { Response } from 'express';
import { StaticProvider } from '@angular/core';
import { Type } from '@angular/core';

/**
 * This is an express engine for handling Angular Applications
 */
export declare function ngExpressEngine(setupOptions: Readonly<NgSetupOptions>): (filePath: string, options: Readonly<RenderOptions>, callback: (err?: Error | null | undefined, html?: string | undefined) => void) => void;

/**
 * These are the allowed options for the engine
 */
export declare interface NgSetupOptions {
    bootstrap: Type<{}> | NgModuleFactory<{}>;
    providers?: StaticProvider[];
}

/**
 * These are the allowed options for the render
 */
export declare interface RenderOptions extends NgSetupOptions {
    req: Request;
    res?: Response;
    url?: string;
    document?: string;
}

export { }
